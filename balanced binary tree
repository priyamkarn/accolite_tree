int height(Node *&root)
    {
        if(root==NULL)
        {
            return 0;
        }
        int lh=height(root->left);
        int rh=height(root->right);
        return max(lh,rh)+1;
    }
    bool isBalanced(Node *root)
    {
        //  Your Code here
        if(root==NULL)
        {
            return true;
        }
        int lh=height(root->left);
        int rh=height(root->right);
        int d=abs(lh-rh);
        if(d>1)
        {
            return false;
        }
        return isBalanced(root->left)&&isBalanced(root->right);
    }
